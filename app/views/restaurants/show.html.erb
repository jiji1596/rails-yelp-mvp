<div class="container">
  <div class="px-5 pb-2 mb-4 rounded text-body-emphasis bg-body-secondary card-category d-flex align-items-end" style="background-image: linear-gradient(rgba(0,0,0,0.56), rgba(0,0,0,0.56)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
    <div class="col-lg-6 px-0">
      <h1><%= @restaurant.name %></h1>
      <p><%= @restaurant.category.capitalize %></p>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-8">
        <p><%= "#{Faker::Restaurant.description}" %></p>
        <h1>reviews</h1>
        <% @restaurant.reviews.each do |review| %>
          <div class="container">
            <p>Anonymous User,  Rating:<%= review.rating %></p>
            <p><%= review.content %></p>
          </div>
        <% end %>
      </div>
      <div class="col-4">
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.phone_number %></p>
        <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: (1..5) %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-8">
  </div>
</div>
